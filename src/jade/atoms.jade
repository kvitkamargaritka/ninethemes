extends _layout
block content
    .container
        .atom
            .user-menu
                .user-menu__left
                    ul.user-menu__list
                        li.user-menu__el us dollar
                        li.user-menu__el.border-right english
                .user-menu__right
                    ul.user-menu__list
                        li.user-menu__el
                            a.user-menu__link my account
                        li.user-menu__el my cart
                            span.user-menu__count 0
                        li.user-menu__el.border-right checkout


    .container
        .atom
            header.header
                header__left
                    .logo
                        img.logo__img
                header__right
                    .general-menu
                        ul.general-menu__list
                            li.general-menu__el
                                a.general-menu__link.general-menu__link_active home
                            li.general-menu__el
                                a.general-menu__link bike
                            li.general-menu__el
                                a.general-menu__link clothing
                            li.general-menu__el
                                a.general-menu__link.general-menu__link_border components
                            li.general-menu__el
                                a.general-menu__link.general-menu__link_border accessories
                            li.general-menu__el
                                a.general-menu__link.general-menu__link_border blog
                                i.general-menu__ico.fa.fa-search

    .atom
        span.btn.btn_nav
            i.fa.fa-reorder
            |navigation

    .atom
        .general-menu
            ul.general-menu__list
                li.general-menu__el
                    a.general-menu__link.general-menu__link_active home
                li.general-menu__el
                    a.general-menu__link bike
                li.general-menu__el
                    a.general-menu__link clothing
                li.general-menu__el
                    a.general-menu__link.general-menu__link_border components
                li.general-menu__el
                    a.general-menu__link.general-menu__link_border accessories
                li.general-menu__el
                    a.general-menu__link.general-menu__link_border blog
                    i.general-menu__ico.fa.fa-search

    .atom
        .logo
            img.logo__img

    .atom
        span.btn shop now

    .atom
        span.btn view all bikes

    .atom
        span.btn add to cart

    .atom
        span.btn.btn_gray discover

    .atom
        span.btn.btn_compare
            i.fa.fa-exchange
    .atom
        span.btn.btn_cross
            i.fa.fa-remove

    .atom
        .newsletter
            .newsletter__in
                h1.newsletter__title newsletter
                p.newsletter__descr Did you know that we ship to over
                    span.newsletter__descr.newsletter__descr_red 24 different countries
                form.subscribe
                    .subscribe__field
                        input.input.input__field(placeholder="Enter your email address")
                    .subscribe__action
                        span.btn.btn_subscribe(type="submit")
                            i.fa.fa-envelope
                            |Subscribe

    .atom
        .section-title
            h2.section-title__text choose your
                span.section-title__text_orange bike
            p.section-title__descr Search by type of
            i.section-title__ico.fa.fa-angle-double-down

    .atom
        .filter-menu
            ul.filter-menu__list
                li.filter-menu__el
                    span.filter-menu__text.filter-menu__text_active clothing
                li.filter-menu__el
                    span.filter-menu__text bikes
                li.filter-menu__el
                    span.filter-menu__text components
                li.filter-menu__el
                    span.filter-menu__text accessories
                li.filter-menu__el
                    span.filter-menu__text protections

    .atom
        .item-banner
            img.item-banner__img
            .item-banner__descr
                h2.item-banner__title men
                    span.item-banner__price $350
                p.item-banner__text Bikes, Clothing, and many more...
                .item-banner__buy
                    span.btn shop now

    .atom
        .product
            .product__top
                img(src="img/product_1.png").
            .product__center
                .product__name Mountain bikes
            .product__bottom
                .product__price
                    span.product__text Start from
                    span.product__text.product__text_orange $599

    .atom
        .item
            .item__top
                a(href="#")
                    img(src="img/item_1.jpg").item__img
                .item__btn-group
                    .btn-group
                        ul.btn-group__list
                            li.btn-group__el
                                span.btn.btn_white
                                    i.fa.fa-exchange
                            li.btn-group__el
                                span.btn.btn_white
                                    i.fa.fa-heart
                            li.btn-group__el
                                span.btn.btn_white.btn_cart
                                    i.fa.fa-shopping-cart
            .item__bottom
                h4.item__title apple cinema 30"
                p
                    span.item__price.item__price_new $110.00
                    span.item__price.item__price_old $122.00
    .atom
        .promotion
            .promotion__top
                h5.promotion__title Waterproof Jacket
                span.promotion__price Men
                    span.promotion__price.promotion__price_orange $350
            .promotion__center
                .features
                    ul.features__list
                        li.features__el Integrated i-Lume LED rear light
                        li.features__el Optional hood available separately
                        li.features__el Breathability rating 15,000
            .promotion__bottom
                .actions
                    ul.actions__list
                        li.actions__el
                            a(href="#").actions__link detail
                        li.actions__el
                            a(href="#").actions__link add to cart

    .atom(style="background: #ccc")
        .btn-group
            ul.btn-group__list
                li.btn-group__el
                    span.btn.btn_white
                        i.fa.fa-exchange
                li.btn-group__el
                    span.btn.btn_white
                        i.fa.fa-heart
                li.btn-group__el
                    span.btn.btn_white.btn_cart
                        i.fa.fa-shopping-cart















